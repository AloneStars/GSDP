<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gsdp.dao.NewsDao">

	<insert id="addNews" keyProperty="newsId">
		insert ignore news(news_title,news_content,fromAddress,toAddress,sendTime,statue)
		values(#{newsTitle},#{newsContent},#{fromAddress},#{toAddress},#{sendTime},#{statue});
	</insert>
	
	
	<delete id="deleteNews">
		delete from news
		<where>
			news_id = #{newsId};
		</where>
	</delete>
	
	
	<update id="changeNewsStatue">
		update news
		<set>
			statue = #{statue}
		</set>
		<where>
			news_id = #{newsId};
		</where>
	</update>

</mapper>